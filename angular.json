{
  "version": 1,
  "projects": {
    "editor": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/editor",
      "sourceRoot": "apps/editor/src",
      "prefix": "editor",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "baseHref": "/",
            "customWebpackConfig": {
              "path": "./monaco-webpack.config.js",
              "mergeStrategies": {
                "module.rules": "replace"
              }
            },
            "outputPath": "dist/apps/editor",
            "index": "apps/editor/src/index.html",
            "main": "apps/editor/src/main.ts",
            "polyfills": "apps/editor/src/polyfills.ts",
            "tsConfig": "apps/editor/tsconfig.app.json",
            "aot": true,
            "assets": [
              "apps/editor/src/assets",
              {
                "glob": "favicon.ico",
                "input": "libs/theme/assets/ico",
                "output": "/"
              },
              {
                "glob": "**/*",
                "input": "libs/navigation/assets/i18n/",
                "output": "/assets/i18n/navigation"
              },
              {
                "glob": "**/*",
                "input": "libs/theme/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@td-vantage/ui-platform/theme/icons/",
                "output": "/assets/icons/"
              }
            ],
            "styles": [
              "apps/editor/src/styles.scss"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/editor/src/environments/environment.ts",
                  "with": "apps/editor/src/environments/environment.prod.ts"
                },
                {
                  "replace": "libs/authentication/src/environments/environment.ts",
                  "with": "libs/authentication/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "editor:build",
            "proxyConfig": "proxy.conf.js"
          },
          "configurations": {
            "production": {
              "browserTarget": "editor:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-builders/custom-webpack:extract-i18n",
          "options": {
            "browserTarget": "editor:build"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/editor/src/**/*.ts"
            ]
          }
        },
        "scsslint": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "./node_modules/.bin/stylelint --allow-empty-input 'apps/editor/src/**/*.scss'"
              }
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "apps/editor/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "editor-e2e": {
      "root": "apps/editor-e2e",
      "sourceRoot": "apps/editor-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/editor-e2e/cypress.json",
            "tsConfig": "apps/editor-e2e/tsconfig.e2e.json",
            "devServerTarget": "editor:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "editor:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/editor-e2e/**/*.{js,ts}"]
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "schematics": {
    "@nrwl/angular": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nrwl/angular:application": {
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "unitTestRunner": "jest"
    }
  },
  "defaultProject": "janus-e2e"
}
